<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/userWeigth"
        android:layout_margin="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:id="@+id/btt_Calculate"
        android:layout_below="@+id/userWeigth"
        android:layout_alignLeft="@+id/userWeigth"
        android:layout_alignStart="@+id/userWeigth"
        android:layout_alignRight="@+id/userWeigth"
        android:layout_alignEnd="@+id/userWeigth"
        android:onClick="calcWeight" />
</RelativeLayout>
